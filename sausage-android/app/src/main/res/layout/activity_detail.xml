<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:ignore="MissingPrefix"
    tools:context="com.gunghi.tgwing.sausage.activity.DetailActivity">


    <View
        android:id="@+id/nayangTop"
        android:background="#ffffff"
        android:layout_width="0dp"
        android:layout_height="228dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/contents_namyang"
        />

    <View
        android:id="@+id/nayangButtonView"
        android:background="#ffffff"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nayangTop"
        android:layout_marginTop="4dp"
        />

    <TextView
        fontPath="fonts/Spoqa Han Sans Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관련기사"
        android:textSize="11sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/nayangButtonView"
        app:layout_constraintTop_toTopOf="@+id/nayangButtonView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="74dp"
        android:onClick="onReportListButton"
        />

    <TextView
        fontPath="fonts/Spoqa Han Sans Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:textSize="11sp"
        android:textColor="#9b9b9b"
        app:layout_constraintBottom_toBottomOf="@+id/nayangButtonView"
        app:layout_constraintTop_toTopOf="@+id/nayangButtonView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="71dp"
        android:onClick="onCommunityListButton"
        />

    <View
        android:id="@+id/nayangBottomView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nayangButtonView"
        android:layout_marginTop="2dp"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nayangButtonView"
        android:layout_marginTop="2dp"
        >



    <ImageView
        android:id="@+id/nayangBottomImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/nayangBottomView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/contents_02"
        />
    </ScrollView>

</android.support.constraint.ConstraintLayout>
