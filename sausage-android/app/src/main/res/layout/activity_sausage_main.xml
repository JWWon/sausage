<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gunghi.tgwing.sausage.activity.SausageMainActivity"
    >

    <ImageView
        android:id="@+id/logoButton"
        android:layout_width="87dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/titleSausegeView"
        app:layout_constraintTop_toTopOf="@+id/titleSausegeView"
        app:layout_constraintLeft_toLeftOf="@+id/titleSausegeView"
        app:layout_constraintRight_toRightOf="@+id/titleSausegeView"
        android:src="@drawable/logo_sausage_small"
        />

    <ImageButton
        android:id="@+id/menuButton"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/titleSausegeView"
        app:layout_constraintBottom_toBottomOf="@+id/titleSausegeView"
        app:layout_constraintLeft_toLeftOf="@+id/titleSausegeView"
        android:layout_marginStart="17.5dp"
        android:src="@drawable/menu"
        />

    <ImageButton
        android:id="@+id/searchButton"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/titleSausegeView"
        app:layout_constraintBottom_toBottomOf="@+id/titleSausegeView"
        app:layout_constraintRight_toRightOf="@+id/titleSausegeView"
        android:layout_marginEnd="17.5dp"
        android:src="@drawable/shape_shape"
        />

    <View
        android:id="@+id/titleSausegeView"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#29b6f6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        />

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:background="#ffffff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </FrameLayout>


</android.support.constraint.ConstraintLayout>
