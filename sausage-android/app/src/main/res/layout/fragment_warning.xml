<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:ignore="MissingPrefix"
    >

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        />

    <TextView
        fontPath="fonts/Spoqa Han Sans Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신규 회수・판매중지 제품"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgImageView"
        app:layout_constraintBottom_toBottomOf="@+id/bgImageView"
        android:textColor="#29b6f6"
        android:textSize="14sp"
        />

    <GridView
        android:id="@+id/newGridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bgImageView"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:numColumns="2"
        android:verticalSpacing="18dp"
        android:horizontalSpacing="16dp"
        android:stretchMode="columnWidth"
        android:scrollbars="vertical"
        android:gravity="center"
        >
    </GridView>
    
    <View
        android:id="@+id/viewGray"
        android:layout_width="368dp"
        android:layout_height="16dp"
        android:background="#33cccccc"
        app:layout_constraintTop_toBottomOf="@+id/newGridView"
        android:layout_marginTop="0dp"
         />

    <ImageView
        android:id="@+id/bgImageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewGray"
        android:layout_marginTop="21dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        />

    <TextView

        fontPath="fonts/Spoqa Han Sans Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회수・판매중지 제품"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgImageView2"
        app:layout_constraintBottom_toBottomOf="@+id/bgImageView2"
        android:textSize="14sp"
        android:textColor="#29b6f6"
        />

    <GridView
        android:id="@+id/oldGridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bgImageView2"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:numColumns="2"
        android:verticalSpacing="18dp"
        android:horizontalSpacing="16dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:scrollbars="vertical"
        >
    </GridView>


</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>