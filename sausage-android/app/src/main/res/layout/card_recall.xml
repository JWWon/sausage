<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="152dp"
    android:layout_height="222dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_button"
    tools:ignore="MissingPrefix"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="13dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    >

    <ImageView
        android:id="@+id/recallImageView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        />

    <TextView
        fontPath="fonts/Spoqa Han Sans Bold.ttf"
        android:id="@+id/recallNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유기농 로젤 히비스커..."
        android:textSize="12.5sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="158dp"
        android:layout_marginStart="10.5dp"
        android:textColor="#000000"
    />

    <TextView
        fontPath="fonts/Spoqa Han Sans Bold.ttf"
        android:id="@+id/recallReasonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금속성 이물 규격 부적합"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10.5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="178dp"
        android:textColor="#a6a6a6"
        />

    <TextView
        fontPath="fonts/Spoqa Han Sans Bold.ttf"
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록일 :"
        android:textColor="#4a4a4a"
        android:textSize="12.5sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="196.5dp"
        android:layout_marginStart="10.5dp"
        />

    <TextView
        android:id="@+id/recallDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.08.25"
        android:textColor="#4a4a4a"
        android:textSize="12.5sp"
        app:layout_constraintLeft_toRightOf="@+id/textViewDate"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="196.5dp"
        android:layout_marginStart="2dp"
        />






</android.support.constraint.ConstraintLayout>